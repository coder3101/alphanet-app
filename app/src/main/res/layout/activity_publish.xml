<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".activities.PublishActivity">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <include
           layout="@layout/step_1_publish_layout"
           android:id="@+id/publish_step_one"
           android:visibility="visible" />
       <include
           layout="@layout/step_2_publish_layout"
           android:id="@+id/publish_step_two"
           android:visibility="gone" />

       <include
           layout="@layout/step_3_publish_layout"
           android:id="@+id/publish_step_three"
           android:visibility="gone" />
   </FrameLayout>
</ScrollView>